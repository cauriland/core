{
    "name": "@cauriland/core-snapshots",
    "version": "3.2.0",
    "description": "Provides live local streamed snapshots functionality for Cauri Core",
    "license": "MIT",
    "contributors": [
        "Arsel Tindo <arsel.tindo@cauri.cm>",
        "Sebastijan Ku≈æner <sebastijan@ark.io>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "build:docs": "../../node_modules/typedoc/bin/typedoc --out docs src",
        "clean": "rimraf dist",
        "compile": "node ../../node_modules/typescript/bin/tsc",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@cauriland/core-database": "3.2.0",
        "@cauriland/core-kernel": "3.2.0",
        "@cauriland/crypto": "3.2.0",
        "bytebuffer": "5.0.1",
        "fs-extra": "8.1.0",
        "joi": "17.4.2",
        "msgpack-lite": "0.1.26",
        "ora": "4.1.1",
        "pg-query-stream": "3.4.2",
        "pluralize": "8.0.0",
        "typeorm": "0.2.25",
        "xcase": "2.0.1"
    },
    "devDependencies": {
        "@types/fs-extra": "8.1.2"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "cauriland": {
        "core": {
            "alias": "snapshots"
        }
    }
}
